{
  "$schema": "https://json.schemastore.org/tsconfig",
  "ts-node": {
    "files": true
  },
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "skipLibCheck": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "outDir": "dist"
  }
}
